<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2D5E62">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요 ‘매장명’ 입니다 :-)"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/saving_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hello_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="44dp">

        <ImageButton
            android:id="@+id/menu_saving_button"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:background="@drawable/coupon" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:background="@drawable/logo_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적립하기"
            android:textColor="#2D5E62"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/using_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hello_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginRight="44dp">

        <ImageButton
            android:id="@+id/menu_using_button"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:background="@drawable/coupon" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:background="@drawable/logo_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용하기"
            android:textColor="#2D5E62"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"/>
    </FrameLayout>

    <Button
        android:id="@+id/register_brand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아직 매장 등록을 안 하셨나요?"
        android:textSize="13sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/saving_fl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>